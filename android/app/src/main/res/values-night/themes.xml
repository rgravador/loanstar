<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Loanstar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Deep Navy (lighter for dark mode) -->
        <item name="colorPrimary">@color/navy_200</item>
        <item name="colorPrimaryVariant">@color/navy_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color - Gold (lighter for dark mode) -->
        <item name="colorSecondary">@color/gold_200</item>
        <item name="colorSecondaryVariant">@color/gold_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color - Deep Navy -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Splash Screen (Android 12+) - No icon, just navy background -->
        <item name="android:windowSplashScreenBackground">@color/navy_900</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimationDuration">200</item>
        <!-- Customize your theme here. -->
    </style>
</resources>