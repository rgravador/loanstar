<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Loanstar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Deep Navy -->
        <item name="colorPrimary">@color/navy_500</item>
        <item name="colorPrimaryVariant">@color/navy_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color - Gold -->
        <item name="colorSecondary">@color/gold_500</item>
        <item name="colorSecondaryVariant">@color/gold_800</item>
        <item name="colorOnSecondary">@color/navy_900</item>
        <!-- Status bar color - Deep Navy -->
        <item name="android:statusBarColor">@color/navy_900</item>
        <!-- Splash Screen (Android 12+) - No icon, just navy background -->
        <item name="android:windowSplashScreenBackground">@color/navy_900</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimationDuration">200</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Tab Text Appearance for better readability -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>