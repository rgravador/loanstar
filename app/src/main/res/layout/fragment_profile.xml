<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_with_overlay"
    tools:context=".ui.profile.ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/navy_900"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleMarginBottom="16dp">

            <!-- Cover Photo -->
            <FrameLayout
                android:id="@+id/cover_photo_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/iv_cover_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_cover_photo"
                    android:contentDescription="Cover Photo" />

                <!-- Cover Photo Edit Button -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_edit_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="16dp"
                    android:contentDescription="Edit Cover Photo"
                    app:fabSize="mini"
                    app:backgroundTint="#80000000"
                    app:tint="@android:color/white"
                    app:srcCompat="@drawable/ic_camera_24" />
            </FrameLayout>

            <!-- Profile Picture Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                app:layout_collapseMode="pin">

                <!-- Profile Picture with Border -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profile_picture_card"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="-70dp"
                    app:cardCornerRadius="70dp"
                    app:cardElevation="8dp"
                    app:strokeWidth="4dp"
                    app:strokeColor="@android:color/white">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_avatar_initial"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/gold_500"
                            android:gravity="center"
                            android:text="U"
                            android:textColor="@color/navy_900"
                            android:textSize="56sp"
                            android:textStyle="bold" />

                        <!-- Camera Icon Overlay -->
                        <ImageView
                            android:id="@+id/iv_edit_profile_picture"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end|bottom"
                            android:layout_margin="4dp"
                            android:background="@drawable/bg_profile_picture_border"
                            android:contentDescription="Edit Profile Picture"
                            android:padding="8dp"
                            android:src="@drawable/ic_camera_24"
                            app:tint="@color/navy_900" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- User Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Username -->
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <!-- Email -->
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="email@example.com"
                    android:textSize="14sp"
                    android:textColor="#CCFFFFFF" />

                <!-- Role Badge -->
                <TextView
                    android:id="@+id/tv_role_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/gold_500"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="AGENT"
                    android:textColor="@color/navy_900"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_edit_profile"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Edit Profile"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/gold_500"
                    android:textStyle="bold"
                    app:icon="@android:drawable/ic_menu_edit"
                    app:iconTint="@android:color/white" />

                <Button
                    android:id="@+id/btn_view_about"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="About"
                    android:textColor="@color/gold_500"
                    app:strokeColor="@color/gold_500"
                    app:icon="@drawable/ic_info_24"
                    app:iconTint="@color/gold_500" />

                <Button
                    android:id="@+id/btn_settings"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Settings"
                    android:textColor="@color/gold_500"
                    app:strokeColor="@color/gold_500"
                    app:icon="@drawable/ic_settings_24"
                    app:iconTint="@color/gold_500" />

            </LinearLayout>

            <!-- Stats Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:background="@drawable/bg_glass_card"
                    android:weightSum="3">

                    <!-- Stat 1: Total Accounts -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_stat_accounts_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/gold_500" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accounts"
                            android:textSize="12sp"
                            android:textColor="#99FFFFFF" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#33FFD700" />

                    <!-- Stat 2: Active Loans -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_stat_loans_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/gold_500" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active Loans"
                            android:textSize="12sp"
                            android:textColor="#99FFFFFF" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#33FFD700" />

                    <!-- Stat 3: Member Since -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_member_since"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jan 2024"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/gold_500" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Member Since"
                            android:textSize="12sp"
                            android:textColor="#99FFFFFF" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tab Navigation -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_glass_card"
                app:tabTextColor="#99FFFFFF"
                app:tabSelectedTextColor="@color/gold_500"
                app:tabIndicatorColor="@color/gold_500"
                app:tabIndicatorHeight="3dp"
                app:tabMode="fixed"
                app:tabGravity="fill">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity" />

            </com.google.android.material.tabs.TabLayout>

            <!-- Content Container (ViewPager2 alternative - simple visibility toggle) -->
            <FrameLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- About Section -->
                <LinearLayout
                    android:id="@+id/section_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Profile Details Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_profile_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@drawable/bg_glass_card">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profile Information"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="16dp" />

                            <!-- Full Name -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_person_24"
                                    android:contentDescription="Person"
                                    app:tint="#99FFFFFF"
                                    android:layout_marginEnd="12dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Full Name"
                                        android:textSize="12sp"
                                        android:textColor="#66FFFFFF" />

                                    <TextView
                                        android:id="@+id/tv_full_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Not set"
                                        android:textSize="16sp"
                                        android:textColor="#FFFFFF"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Phone -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@android:drawable/stat_sys_phone_call"
                                    android:contentDescription="Phone"
                                    app:tint="#99FFFFFF"
                                    android:layout_marginEnd="12dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Phone Number"
                                        android:textSize="12sp"
                                        android:textColor="#66FFFFFF" />

                                    <TextView
                                        android:id="@+id/tv_phone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Not set"
                                        android:textSize="16sp"
                                        android:textColor="#FFFFFF"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Address -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@android:drawable/ic_dialog_map"
                                    android:contentDescription="Address"
                                    app:tint="#99FFFFFF"
                                    android:layout_marginEnd="12dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Address"
                                        android:textSize="12sp"
                                        android:textColor="#66FFFFFF" />

                                    <TextView
                                        android:id="@+id/tv_address"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Not set"
                                        android:textSize="16sp"
                                        android:textColor="#FFFFFF"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Date of Birth -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@android:drawable/ic_menu_my_calendar"
                                    android:contentDescription="Date of Birth"
                                    app:tint="#99FFFFFF"
                                    android:layout_marginEnd="12dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Date of Birth"
                                        android:textSize="12sp"
                                        android:textColor="#66FFFFFF" />

                                    <TextView
                                        android:id="@+id/tv_date_of_birth"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Not set"
                                        android:textSize="16sp"
                                        android:textColor="#FFFFFF"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Account Status Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_account_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@drawable/bg_glass_card">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Account Status"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="16dp" />

                            <!-- Approval Status -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Status"
                                    android:textSize="14sp"
                                    android:textColor="#99FFFFFF" />

                                <TextView
                                    android:id="@+id/tv_approval_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/status_approved_bg"
                                    android:paddingStart="12dp"
                                    android:paddingEnd="12dp"
                                    android:paddingTop="4dp"
                                    android:paddingBottom="4dp"
                                    android:text="APPROVED"
                                    android:textColor="@color/status_approved_text"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Details Section (Initially Hidden) -->
                <LinearLayout
                    android:id="@+id/section_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@drawable/bg_glass_card">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Additional Details"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="More profile details coming soon..."
                                android:textSize="14sp"
                                android:textColor="#99FFFFFF" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Activity Section (Initially Hidden) -->
                <LinearLayout
                    android:id="@+id/section_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:background="@drawable/bg_glass_card">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recent Activity"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activity log coming soon..."
                                android:textSize="14sp"
                                android:textColor="#99FFFFFF" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
