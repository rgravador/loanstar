<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glass card with lighter navy tint -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#334D6B99" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Lighter Gold Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1.5dp"
                android:color="#4DFFE57F" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
